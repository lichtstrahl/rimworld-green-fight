      <li>Tundra</li>
      <li>AridShrubland</li>
    </allowedBiomes>
	
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    
	<workerClass>GreenFight.Events.IncidentWorker_TestIndcident</workerClass>
    <baseChance>44</baseChance>
    <minRefireDays>30</minRefireDays>
  </IncidentDef>
  
